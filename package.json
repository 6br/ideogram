{
  "name": "ideogram",
  "version": "0.6.1",
  "description": "Chromosome visualization with D3.js",
  "main": "src/js/index.js",
  "directories": {
    "example": "examples",
    "test": "test"
  },
  "preferGlobal": true,
  "bin": {
    "ideogram": "cli/ideo-cli.js"
  },
  "scripts": {
    "test": "karma start --single-run --browsers ChromeHeadless karma.conf.js",
    "build": "webpack -p --display-modules --display-reasons && cp -r src/css dist/ && mkdir -p dist/data && cp -r data/{bands,annotations} dist/data",
    "watch": "webpack --watch && cp -r src/css dist/ && mkdir -p dist/data && cp -r data/{bands,annotations} dist/data",
    "start": "webpack-dev-server --open"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eweitz/ideogram.git"
  },
  "keywords": [
    "chromosome",
    "ideogram",
    "cytogenetics",
    "genomics",
    "visualization",
    "d3"
  ],
  "author": "Eric Weitz",
  "license": "CC0-1.0",
  "bugs": {
    "url": "https://github.com/eweitz/ideogram/issues"
  },
  "homepage": "https://github.com/eweitz/ideogram#readme",
  "dependencies": {
    "commander": "*",
    "d3": "4.1.1",
    "d3.promise": "^2.0.0",
    "es6-promise": "^4.1.0"
  },
  "devDependencies": {
    "babel-core": "^6.25.0",
    "babel-loader": "^7.1.1",
    "babel-preset-env": "^1.6.0",
    "chai": "^3.2.0",
    "eslint": "^4.1.1",
    "eslint-config-google": "^0.5.0",
    "eslint-config-standard": "^5.3.1",
    "eslint-plugin-promise": "^3.3.0",
    "karma": "^1.7.0",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-mocha": "^1.3.0",
    "mocha": "^2.3.0",
    "webpack": "^3.1.0",
    "webpack-dev-server": "^2.6.1"
  }
}
